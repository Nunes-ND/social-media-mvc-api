{
  "name": "social-media-mvc-api",
  "version": "1.0.0",
  "description": "Node.js MVC API for social media client management - A practice project focused on clean architecture and CRUD operations",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build:prod && node dist/main.js",
    "dev": "NODE_ENV=development tsx watch --env-file .env src/main.ts",
    "build:prod": "tsc -p tsconfig.prod.json",
    "build:dev": "tsc -p tsconfig.dev.json",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nunes-ND/social-media-mvc-api.git"
  },
  "keywords": [
    "Node",
    "MVC",
    "Api"
  ],
  "author": "Gilson Nunes",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Nunes-ND/social-media-mvc-api/issues"
  },
  "homepage": "https://github.com/Nunes-ND/social-media-mvc-api#readme",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/node": "^24.0.15",
    "husky": "^9.1.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "ultracite": "5.0.47",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
